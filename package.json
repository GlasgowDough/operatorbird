{
  "name": "operatorbird",
  "version": "1.0.0",
  "description": "A fun variation of Flappy Bird built with Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron": "^25.3.1"
  },
  "devDependencies": {
    "electron-builder": "^24.5.1"
  },
  "build": {
    "appId": "com.example.operatorbird",
    "productName": "Operator Bird",
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!release/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
